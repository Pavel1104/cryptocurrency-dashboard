{
  "extends": ["tslint:latest", "tslint-react"],
  "rules": {
    "no-implicit-dependencies": false, // https://github.com/palantir/tslint/issues/3364
    "no-submodule-imports": [
      true,
      "@material-ui",
      "@src",
      "redux-saga",
      "redux-localstorage",
      "autosuggest-highlight",
      "react-grid-layout",
      "react-resizable"
    ],
    "ordered-imports": false,
    "quotemark": [true, "single"]
  }
}
